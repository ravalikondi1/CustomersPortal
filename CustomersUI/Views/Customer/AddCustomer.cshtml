@model bool
@{
    ViewBag.Title = "Add a Customer";
}

<h2>Add a Customer <a asp-action="Index" class="btn btn-sm btn-secondary">Back</a></h2>
<form asp-action="AddCustomer" method="post">
    <div class="form-group">
        <label for="Name">First Name:</label>
        <input class="form-control" name="FirstName" />
    </div>
    <div class="form-group">
        <label for="StartLocation">Last Name:</label>
        <input class="form-control" name="LastName" />
    </div>
    <div class="form-group">
        <label for="EndLocation">Phone Number:</label>
        <input class="form-control" name="PhoneNumber" />
    </div>
    <div class="form-group">
        <label for="EndLocation">Email Address:</label>
        <input class="form-control" name="EmailAddress" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Add</button>
    </div>
</form>

@if(Model){
    <p>Customer added successfully</p>
}

