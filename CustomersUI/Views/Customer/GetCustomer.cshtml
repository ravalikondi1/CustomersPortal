@model Customer
@{
    ViewBag.Title = "Get Customer by Id";
}

<h2>Get Customer by Id <a asp-action="Index" class="btn btn-sm btn-secondary">Back</a></h2>
<h3>@ViewBag.StatusCode</h3>
<form method="post">
    <div class="form-group">
        <label for="id">Id:</label>
        <input class="form-control" name="id" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Get Customer</button>
    </div>
</form>

@if (Model != null)
{
    <h2>Customer</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Phone Number</th>
                <th>Email Address</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.Id</td>
                <td>@Model.FirstName</td>
                <td>@Model.LastName</td>
                <td>@Model.PhoneNumber</td>
                <td>@Model.EmailAddress</td>
            </tr>
        </tbody>
    </table>
}